<launch>

    <node pkg="lidar_camera_bag_playback" name="lidar_camera_bag_playback" type="lidar_camera_bag_playback" output="screen" required="true">

        <param name="output_width" value="1920" />
        <param name="output_height" value="1208" />
        <param name="limit_playback_speed" value="false" />
        <param name="bag_file" value="$(arg bag_file_name)"/>
        <param name="publish_full_cloud" type="bool" value="false" />

        <param name="percentage_start" value="0" />
        <param name="percentage_end" value="40" />

        <!--  week 11
                <param name="percentage_start" value="60" />
                <param name="percentage_end" value="74" />
        -->

        <!--  week 16
        <param name="percentage_start" value="54" />
        <param name="percentage_end" value="69" />
-->

        <!--  week 3

                <param name="percentage_start" value="58" />
                <param name="percentage_end" value="70" />
-->

        <!--  week 7
        <param name="percentage_start" value="52" />
        <param name="percentage_end" value="64" />
-->



        <param name="lidar_frame" value="velodyne_front_link" />

        <param name="publish_uv_cloud" type="bool" value="true" />
        <param name="publish_rgb_cloud" type="bool" value="true" />


        <!-- correction for 003
        <param name="new_pitch" value="-0.02" />
        <param name="new_yaw" value="-0.01" />
        -->


        <!-- correction for cudal data
        <param name="new_pitch" value="-0.03" />
        <param name="new_yaw" value="-0.07" />
-->


        <!-- correction for 004
                <param name="new_yaw" value="-0.03" />
                -->


        <!-- load the list of cameras to perform the projection into the lidar pointcloud -->
        <rosparam file="$(find lidar_camera_bag_playback)/config/cameras.yaml" command="load" />

    </node>

</launch>



